<%= page_heading "Forums" %>

<table class="list-table" cellpadding="3" cellspacing="0" summary="Forums"> 
  <thead>
    <tr valign="top">
      <th class="list-table">Forum Name</th>
      <th class="list-table">Description</th>
      <th class="list-table">Threads</th>
      <th class="list-table" width="100">Last Post</th>
    </tr>
  </thead>
  <tbody>
    <% for forum in @forums %>
    <tr valign="top" class="<%= cycle('odd','even') %>">
      <td class="list-table">
        <%= link_to h(forum.name), messages_path(:forum_id => forum.forum_id) %>
      </td>
      <td class="list-table">
        <%= forum.charter %>
      </td>
      <td class="list-table">
        <%= forum.thread_count %>
      </td>
      <td class="list-table">
        <%= forum.last_post.to_s(:us) %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
