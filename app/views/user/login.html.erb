<% if flash[:notice] %>
<div style="font-family:'Trebuchet MS'; color:#FF0000; font-size:14px;">
  <%= flash[:notice] %>
</div>
<% end %>

<!--creates form, exectues the authenticate method when the submit button is clicked-->
<%= form_tag :action=>'authenticate' %>
<table border=0>
  <tr>
    <td>User name:</td>
    <td><%= text_field("userform", "username", :size=>"20" ) %> </td>
    </tr>
  <tr>
    <td>Password:</td>
    <td><%= password_field("userform", "password", :size=>"20" ) %></td>
  </tr>
  <tr>
    <td></td>
    <td><input type="submit" value=" LOGIN " /></td>
</table>


