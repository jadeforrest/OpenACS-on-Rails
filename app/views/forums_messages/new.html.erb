<h1>New post</h1> 

<% form_for @message do |f| %>  

<%= hidden_field_tag(:forum_id, params['forum_id']) %>

<%= f.error_messages %> 

<p>  
  <%= f.label :subject %><br />  
  <%= f.text_field :subject %>  
</p>

  <%= f.label :content %><br />
  <%= f.text_area :content %>
</p>  

<p>  
  <%= f.submit "Create" %>
</p> 

<% end %> 

<%= link_to 'Back', messages_path(:forum_id => params['forum_id']) %> 
